<div class='col-md-9 two-pane-right'>
  <form role="form" class='well form-horizontal'>
  <div class='row'>
    <div class='col-md-6'>
      <h3>{{name}}</h3>
    </div>
    <div class='pull-right close-button'>
      {{#link-to 'settings'}}&times;{{/link-to}}
    </div>
  </div>

    {{text-f value=value label="Value"}}
    {{text-f value=default_value label="Default"}}
    {{textarea-f value=description label="Description"}}
    {{default}}
    Last updated at {{time-ago-in-words updated_at}}
    <button {{action 'update'}}>Save</button>
  </form>
</div>
